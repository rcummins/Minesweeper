    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-150406014-1');
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
